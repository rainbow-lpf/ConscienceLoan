<script src="~/Angularjs/angular.min.js"></script>
<script type="text/javascript">
    var app = angular.module("TenderReleaseMessage", []);
    app.controller("TenderRelease", ["$scope", "$http", function ($scope, $http) {
        var ue = UE.getEditor('editor');
        //时间的控制
        jeDate({
            dateCell: "#dateinfo1",
            format: "YYYY年MM月DD日 hh:mm:ss",
            isinitVal: true,
            isTime: true, //isClear:false,
            minDate: "2014-09-19 00:00:00",
            okfun: function (val) { alert(val) }
        })
        jeDate({
            dateCell: "#dateinfo2",
            format: "YYYY年MM月DD日 hh:mm:ss",
            isinitVal: true,
            isTime: true, //isClear:false,
            minDate: "2014-09-19 00:00:00",
            okfun: function (val) { alert(val) }
        })
        $scope.Submit = function () {
            $scope.Tender.TenContent = UE.getEditor('editor').getContent();
            $scope.Tender.TenStartTime = $("#dateinfo1").val();
            $scope.Tender.TenEndTime = $("#dateinfo2").val();
            $scope.xx = $scope.Tender;
            $http({
                data: $scope.Tender,
                method: "POST",
                url: "/Tender/AddTender"
            }).success(function (response) {
                if (response === "1") {
                    alert("发布成功");
                } else {
                    alert("发布失败");
                    $scope.Tender = {};
                }
            });
        }
        $scope.FormClare = function () {
            $scope.Tender = {};
            UE.getEditor('editor').setContent("");
        }
        function getPlainTxt() {
            var arr = [];
            arr.push("使用editor.getPlainTxt()方法可以获得编辑器的带格式的纯文本内容");
            arr.push("内容为：");
            arr.push(UE.getEditor('editor').getPlainTxt());
            alert(arr.join('\n'))
        }
    }])
</script>

